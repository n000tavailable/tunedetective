<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/navigationBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#121212"
            android:src="@drawable/ic_search"
            android:layout_marginEnd="30dp"
            app:tint="@color/material_dynamic_primary99" />

        <ImageButton
            android:id="@+id/releasesButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#121212"
            android:src="@drawable/ic_releases"
            android:layout_marginEnd="30dp"
            app:tint="@color/material_dynamic_primary99" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#121212"
            android:src="@drawable/ic_settings"
            android:layout_marginEnd="30dp"
            app:tint="@color/material_dynamic_neutral50" />

        <ImageButton
            android:id="@+id/infoButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#121212"
            android:src="@drawable/ic_info"
            app:tint="@color/material_dynamic_primary99" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Welcome-Message"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"/>

    <Switch
        style="@style/Preference.SwitchPreferenceCompat"
        android:id="@+id/welcomeMessageToggleButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:checked="true"
        android:layout_marginStart="16dp"
        android:layout_gravity="center_vertical"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


</LinearLayout>