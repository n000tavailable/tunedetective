<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#181818"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeMessageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/artistEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#181818"
        android:hint="Enter artist name"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:minHeight="48dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#78909C"
        android:autofillHints="" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Search"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/albumCoverImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="#181818"
            android:scaleType="centerCrop"
            android:src="@drawable/round_music_note_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:id="@+id/trackTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Track Title"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/releaseDateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Release Date"
                android:textColor="#A8A8A8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp" >

            <ImageView
                android:id="@+id/artistImageView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/default_profile_image"
                android:scaleType="centerCrop" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/versionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:text="Version: 0.2"
            android:textColor="#A8A8A8"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp" />

    </FrameLayout>

</LinearLayout>
