<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">



    <LinearLayout
        android:id="@+id/navigationBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#121212"
            android:src="@drawable/ic_search"
            android:layout_marginEnd="30dp"
            app:tint="@color/material_dynamic_primary99" />

        <ImageButton
            android:id="@+id/releasesButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#121212"
            android:src="@drawable/ic_releases"
            android:layout_marginEnd="30dp"
            app:tint="@color/material_dynamic_primary99" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#121212"
            android:src="@drawable/ic_settings"
            android:layout_marginEnd="30dp"
            app:tint="@color/material_dynamic_primary99" />

        <ImageButton
            android:id="@+id/infoButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#121212"
            android:src="@drawable/ic_info"
            app:tint="@color/material_dynamic_neutral50" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tunedetective!"
        android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
        android:textColor="#fff"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/frog" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <TextView
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="You're running version 2.0!"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp" />

    <TextView
        style="@style/TextAppearance.Material3.BodyMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TuneDetective is an Android application designed to help users discover music artists and explore their latest releases. The app utilizes the Deezer API to search for similar artists based on user input and provides information about their albums and tracks.\n \nTuneDetective is a great tool for music enthusiasts who don't want to use any closed source software and stay up to date with the latest music releases. TuneDetective has you covered. Enjoy the world of music at your fingertips!"
        android:textColor="#fff" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/joinMatrix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Matrix-Server"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:textStyle="bold" />

        <Button
            android:id="@+id/githubPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Github Page"
            style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

    </LinearLayout>

</LinearLayout>
